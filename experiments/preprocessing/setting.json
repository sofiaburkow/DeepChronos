{
    "jobs": [
        {
            "name": "stratified_unbalanced",
            "input_csv": "../../data/DARPA_2000/Scenario_One/inside/inside_labeled_flows_all.csv",
            "feature_list": [
                "duration","proto","service","orig_bytes","resp_bytes","conn_state",
                "local_orig","local_resp","missed_bytes","history","orig_pkts",
                "orig_ip_bytes","resp_pkts","resp_ip_bytes","tunnel_parents","ip_proto"
            ],
            "ip_encoding": "none",
            "split": {"type": "stratified", "by": "phase", "train_size": 0.6},
            "sampling": null,
            "output_dir": "processed_data/stratified/unbalanced"
        },
        {
            "name": "stratified_sampled",
            "input_csv": "../../data/DARPA_2000/Scenario_One/inside/inside_labeled_flows_all.csv",
            "feature_list": [
                "duration","proto","service","orig_bytes","resp_bytes","conn_state",
                "local_orig","local_resp","missed_bytes","history","orig_pkts",
                "orig_ip_bytes","resp_pkts","resp_ip_bytes","tunnel_parents","ip_proto"
            ],
            "ip_encoding": "none",
            "split": {"type": "stratified", "by": "phase", "train_size": 0.6},
            "sampling": {
                "all_phases": [ 
                    {"mode": "upsample", "desired_target": "20000"},
                    {"mode": "downsample", "desired_target": "30"}
                ],
                "per_phase": {"mode": "auto", "desired_target": "15000"}
            },
            "output_dir": "processed_data/stratified/sampled"
        },
        {
            "name": "host_temporal_unbalanced",
            "input_csv": "../../data/DARPA_2000/Scenario_One/inside/inside_labeled_flows_all.csv",
            "feature_list": [
                "duration","proto","service","orig_bytes","resp_bytes","conn_state",
                "local_orig","local_resp","missed_bytes","history","orig_pkts",
                "orig_ip_bytes","resp_pkts","resp_ip_bytes","tunnel_parents","ip_proto"
            ],
            "ip_encoding": "none",
            "split": {"type": "host_temporal", "train_size": 0.6},
            "sampling": null,
            "output_dir": "processed_data/host_temporal/unbalanced"
        },
        {
            "name": "host_temporal_sampled",
            "input_csv": "../../data/DARPA_2000/Scenario_One/inside/inside_labeled_flows_all.csv",
            "feature_list": [
                "duration","proto","service","orig_bytes","resp_bytes","conn_state",
                "local_orig","local_resp","missed_bytes","history","orig_pkts",
                "orig_ip_bytes","resp_pkts","resp_ip_bytes","tunnel_parents","ip_proto"
            ],
            "ip_encoding": "none",
            "split": {"type": "host_temporal", "train_size": 0.6},
            "sampling": {
                "all_phases": [ 
                    {"mode": "upsample", "desired_target": "20000"},
